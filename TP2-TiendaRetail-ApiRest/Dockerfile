#See https://aka.ms/customizecontainer to learn how to customize your debug container and how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
USER app
WORKDIR /app
EXPOSE 8080
EXPOSE 8081
ENV DB_CONNECTION_STRING="Server=sqlserverdocker;Database=TiendaRetail;User Id=sa;Password=MyPassword*1234;Trust Server Certificate=true"
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src
COPY ["TP2-TiendaRetail-ApiRest/TP2-TiendaRetail-ApiRest.csproj", "TP2-TiendaRetail-ApiRest/"]
COPY ["Infraestructure/Infraestructure.csproj", "Infraestructure/"]
COPY ["Application/Application.csproj", "Application/"]
COPY ["Domain/Domain.csproj", "Domain/"]
RUN dotnet restore "./TP2-TiendaRetail-ApiRest/TP2-TiendaRetail-ApiRest.csproj"
COPY . .
WORKDIR "/src/TP2-TiendaRetail-ApiRest"
RUN dotnet build "./TP2-TiendaRetail-ApiRest.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./TP2-TiendaRetail-ApiRest.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "TP2-TiendaRetail-ApiRest.dll"]

# Ejecuta la aplicación en modo hot-reload
#CMD ["dotnet", "watch", "run", "--urls", "http://0.0.0.0:8081"]